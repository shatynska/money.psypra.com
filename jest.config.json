{
  "preset": "ts-jest/presets/default-esm",
  "testEnvironment": "jest-environment-jsdom",
  "transform": {
    "^.+\\.tsx?$": [
      "ts-jest",
      {
        "useESM": true
      }
    ]
  },
  "modulePaths": ["<rootDir>"],
  "moduleNameMapper": {
    "^~/app/(.*)$": "<rootDir>/src/1-app/$1",
    "^~/pages/(.*)$": "<rootDir>/src/2-pages/$1",
    "^~/widgets/(.*)$": "<rootDir>/src/3-widgets/$1",
    "^~/features/(.*)$": "<rootDir>/src/4-features/$1",
    "^~/entities/(.*)$": "<rootDir>/src/5-entities/$1",
    "^~/shared/(.*)$": "<rootDir>/src/6-shared/$1"
  },
  "transformIgnorePatterns": ["<rootDir>/node_modules/"]
}
